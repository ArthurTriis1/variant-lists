{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": [
    "DATABASE_URL",
    "HOST",
    "PORT",
    "JWT_REFRESH_SECRET",
    "JWT_SECRET"
  ],
  "tasks": {
    "dev": {
      "cache": false,
      "persistent": true,
      "dependsOn": [
        "^dev"
      ]
    },
    "build": {
      "outputs": [
        "dist/**"
      ],
      "dependsOn": [
        "^build"
      ]
    },
    "serve": {},
    "test": {},
    "test:integration": {
      "dependsOn": [
        "^build"
      ]
    },
    "test:watch": {},
    "lint": {}
  }
}